generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Quest {
  id         Int       @id @default(autoincrement()) // Auto-increment primary key
  parentId   Int?      // Foreign key referencing the same table
  name       String    @db.VarChar(100)  // VARCHAR(100)
  type       QuestType // ENUM ('event', 'campaign', 'side_quest', 'main_quest')
  createdAt  DateTime  @default(now())  // TIMESTAMP for created_at
  updatedAt  DateTime  @updatedAt       // TIMESTAMP for updated_at, auto-updates

  parent     Quest?    @relation("QuestParent", fields: [parentId], references: [id])
  children   Quest[]   @relation("QuestParent")
}

enum QuestType {
  event
  campaign
  side_quest
  main_quest
}